<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Résultat scan:"
                android:layout_gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/selected_icon_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom client : "
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"
                    android:textSize="@dimen/_12sdp"
                />
                <TextView
                    android:id="@+id/nom_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John doe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse client : "
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/adresse_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lot II Avaradoha"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Référence client : "
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/reference_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2504587841"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De : "
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/date_facture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Janvier 2023"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Montant : "
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/montant_facture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11500 MGA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catégorie : "
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/categorie_facture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/montant_donnee"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="number"
                android:hint="@string/montant_donnee"
                android:background="@drawable/rounded_edittext"/>
            <Button
                android:id="@+id/calculer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/backgroundBottomColor"
                android:text="Calculer"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monnaie : "
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textColor="@color/backgroundBottomColor"/>
                <TextView
                    android:id="@+id/monnaie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>