<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:srcCompat="@drawable/paositra_logo"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validation:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_30ssp"
                android:textColor="@color/backgroundBottomColor"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code:"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/backgroundBottomColor"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_12sdp"/>

            <EditText
                android:id="@+id/codeEditText"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="number"
                android:text=""
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CIN:"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/backgroundBottomColor"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_12sdp"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:text="Mon CIN"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/cinEditText"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="number"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"/>

            <Button
                android:id="@+id/validerBoutton"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Valider"
                android:layout_gravity="center"
                android:backgroundTint="@color/successColor"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>